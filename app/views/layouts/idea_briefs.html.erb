<%content_for :header do%>
<%if false%>
    <%javascript_include_tag "https://cdn.jsdelivr.net/bootstrap.listgroup/1.1.2/listgroup.min.js"%>
<%end%>
<%end%>

<%content_for :content do%>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
          <%=render "shared/topbar"%>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="well">
                <h4>My Ideas Memo <span class="badge"><%=@idea_briefs.count%></span></h4>
            </div>
            <div class="list-group">
                <%= render partial: "list", collection: @idea_briefs, as: :idea_brief %>
            </div>
        </div>
        <div class="col-sm-9">
            <%= yield%>
        </div>
    </div>
</div>
<%end%>

<%=render template: "layouts/application"%>



