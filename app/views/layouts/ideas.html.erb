<%content_for :header do%>
    <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<%end%>

<%content_for :content do%>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
          <%=render "shared/topbar"%>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <%=render "idea_left_pane"%>
        </div>
        <div class="col-sm-6">
            <%= yield%>
        </div>
        <div class="col-sm-3">
            <%=render "idea_right_pane"%>
        </div>
    </div>
</div>
<%end%>

<%=render template: "layouts/application"%>



