<div id="idea_social_counts" class="row">
    <%=render partial: "shared/idea_social_counts", locals: {idea: @idea}%>
</div>
<hr>
<div class="row">
  <div class="col-md-4 text-center">
    <%=link_to(like_idea_path(@idea.id, :type=>"follow"), 
      class:"idea-title-fa #{follow_css(@idea)}", remote: true) do%>
      <i class="fa fa-2x fa-eye"></i>
      <span class="idea-title-fa-subtitle">Watch</span>
    <%end%>
  </div>
  <div class="col-md-4">
    <%=link_to("#", class:"idea-title-fa", :data=>{:toggle=>"modal", :target=>"#idea_links_modal"}) do%>
      <i class="fa fa-2x fa-link"></i>
      <span class="idea-title-fa-subtitle">Connect</span>
    <%end%>
  </div>
  <div class="col-md-4">
    <i class="fa fa-2x fa-share-alt"></i>
      <span class="idea-title-fa-subtitle">share</span>
  </div>
</div>


