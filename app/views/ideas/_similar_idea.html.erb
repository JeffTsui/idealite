<div class="container-fluid" style="margin-bottom:0.5em">
  <div class="row">
    <div class="col-md-2">
      <%=image_tag similar_idea.idea_brief.avatar_url, width:"100"%>
    </div>
    <div class="col-md-8">
      <div class="row-fluid">
        <h5>
          <%=link_to similar_idea.idea_brief.title, idea_path(similar_idea)%> - 
          <%=similar_idea.idea_brief.short_desc%>
        </h5>
        </span>
        <div class="row">
          <div class="col-md-5">
            <%=render partial: "shared/idea_social_counts", locals: {idea: similar_idea}%>
          </div>
        </div>
      </div>
      <p>
      </p>
      <p>
        <mark>Audience:</mark>
        <%=similar_idea.idea_brief.target%>
      </p>
      <p>
        <%=truncate(strip_tags(similar_idea.idea_brief.how), length: 200)%>
      </p>
    </div>
  </div>
</div>
