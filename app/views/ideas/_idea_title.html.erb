<div class="panel-body">
    <div>
        <%=image_tag @idea_brief.avatar_url, width:"100"%>
    </div>
    <h4><%=link_to @idea.idea_brief.title, idea_path(@idea)%></h4>
    <p class="small text-muted"><%=@idea.idea_brief.short_desc%></p>
    <p class="text-muted">
        <i class="fa fa-chevron-right small"></i>
        <%=link_to "see details", detail_idea_path(@idea), class:"small"%>
    </p>
    <div id="idea_social_buttons" class="container-fluid">
        <%=render "idea_social_buttons"%>
    </div>
</div>

