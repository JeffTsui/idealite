<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Profile type</th>
      <th>Nickname</th>
      <th>Birthday</th>
      <th>Phone</th>
      <th>Mobile</th>
      <th>Fax</th>
      <th>Address</th>
      <th>City</th>
      <th>Province</th>
      <th>Country</th>
      <th>Zipcode</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.profile_id %></td>
        <td><%= profile.profile_type %></td>
        <td><%= profile.nickname %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.mobile %></td>
        <td><%= profile.fax %></td>
        <td><%= profile.address %></td>
        <td><%= profile.city %></td>
        <td><%= profile.province %></td>
        <td><%= profile.country %></td>
        <td><%= profile.zipcode %></td>
        <td><%= profile.website %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

