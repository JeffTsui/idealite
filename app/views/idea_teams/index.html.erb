<h1>Listing idea_teams</h1>

<table>
  <thead>
    <tr>
      <th>Idea</th>
      <th>Team</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @idea_teams.each do |idea_team| %>
      <tr>
        <td><%= idea_team.idea_id %></td>
        <td><%= idea_team.team_id %></td>
        <td><%= idea_team.role_id %></td>
        <td><%= link_to 'Show', idea_team %></td>
        <td><%= link_to 'Edit', edit_idea_team_path(idea_team) %></td>
        <td><%= link_to 'Destroy', idea_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

